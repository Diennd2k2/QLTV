
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content" style="padding-top: 20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thêm mới độc giả</h3>
                    </div>

                    <form action="/Admin/BookShelfs/Create" method="POST">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Tên độc giả<span style="color: red">(*)</span></label>
                                <input type="text" name="NameReader" class="form-control" placeholder="Nhập tên độc giả">
                                <b class="text-danger">@ViewBag.Name</b>
                                <b class="text-danger">@ViewBag.CheckName</b>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Số điện thoại<span style="color: red">(*)</span></label>
                                <input type="text" name="NameReader" class="form-control" placeholder="Nhập số điện thoại">
                                <b class="text-danger">@ViewBag.Phone</b>
                                <b class="text-danger">@ViewBag.CheckPhone</b>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Trạng thái</label>
                                <br>
                                <input type="radio" name="Status" value="1" checked>Sử dụng
                                <input type="radio" name="Status" value="2">Không sử dụng
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mô tả</label>
                                <textarea class="form-control" name="DescribeNote" rows="4" cols="50" placeholder="Nhập mô tả vị trí, đặc điểm"></textarea>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

