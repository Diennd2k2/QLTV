@model QLTV.Models.BookShelfs
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content" style="padding-top: 20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">SS
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Cập nhật kệ sách</h3>
                    </div>
                    <form action="/Admin/BookShelfs/Edit" method="POST">
                        <input type="hidden" name="IdBookShelf" value="@Model.IdBookShelf"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Tên kệ sách<span style="color: red">(*)</span></label>
                                <input type="text" name="NameBookShelf" value="@Model.NameBookShelf" class="form-control" placeholder="Nhập tên danh mục">
                                <b class="text-danger">@ViewBag.Name</b>
                                <b class="text-danger">@ViewBag.CheckName</b>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Trạng thái</label>
                                <br>
                                <input type="radio" name="Status" value="1" @(Model.Status == 1 ? "checked" : "")>Sử dụng
                                <input type="radio" name="Status" value="2" @(Model.Status == 2 ? "checked" : "")>Không sử dụng
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mô tả</label>
                                <textarea class="form-control" name="DescribeNote" rows="4" cols="50" placeholder="Nhập mô tả vị trí, đặc điểm">@Model.DescribeNote</textarea>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


